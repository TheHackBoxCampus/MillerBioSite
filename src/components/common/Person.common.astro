---
// components
import { Image } from "astro:assets"
import Card from "@/components/ui/Card.astro"

// images
import Dieler from "@/assets/dieler.png";
import Instagram from "@/assets/instagram.png";
import Youtube from "@/assets/youtube.png";
import Avatar from "@/assets/avatar.png"
---

<div class="flex w-full xs:h-full md:h-screen justify-center items-center bg-[#111]">
  <div class="xs:w-full xs:h-full md:h-[90%] md:w-3/5 xl:w-2/5 bg-[#0c0c0c] md:border md:border-[#004aad] md:rounded-xl p-5 flex flex-col items-center gap-5" style="box-shadow: 0px 1px 37px 8px rgba(0, 75, 173, 0.192);">
    <Image src={Avatar} alt={"avatar de miller nariño"} class="xs:w-1/2 md:1/3 lg:w-1/4" loading={"eager"}/>
    <h1 class="card_title text-center text-4xl text-white"><span class="text-[#004aad]">MILLER</span> KALED NARIÑO.</h1>
    <div class="flex flex-col gap-5 md:overflow-auto social">
      <Card 
        src={Youtube} 
        alt="Mi canal de youtube" 
        link="https://www.youtube.com/@millernari%C3%B1o" 
       />
     
       <Card 
       src={Dieler} 
       alt="Agencia de performance dieler" 
       link="https://dieler.co" 
       />

       <Card 
       src={Instagram} 
       alt="Redirección al instagram @miller_narino" 
       link="https://www.instagram.com/miller_narino/" 
      />
    </div>
  </div>
</div>
